<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/swap_two_varriavle"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:background="@drawable/listview_bg"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="Swap two varriavle without using third"/>
        <TextView
            android:id="@+id/disarium_number"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:background="@drawable/listview_bg"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="Disarium number"/>
        <TextView
            android:id="@+id/happy_number"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:background="@drawable/listview_bg"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="Happy number"/>
        <TextView
            android:id="@+id/abundant_number"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:background="@drawable/listview_bg"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="Abundant number"/>
        <TextView
            android:id="@+id/prime_numberupto100"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:background="@drawable/listview_bg"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="Prime number upto 100"/>
        <TextView
            android:id="@+id/twisted_prime_number"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:background="@drawable/listview_bg"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="Twisted prime number "/>
    </LinearLayout>
</ScrollView>


</RelativeLayout>